        body {
            background: linear-gradient(135deg, #2a2b38 0%, #292a38 100%);
            font-family: 'Poppins', Arial, sans-serif;
            min-height: 100vh;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        .menu-container {
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.2);
            padding: 40px 30px 30px 30px;
            display: inline-block;
            min-width: 340px;
        }
        h1 {
            color: #2a2b38;
            margin-bottom: 30px;
            font-weight: 700;
            letter-spacing: 1px;
            text-align: center;
        }
        form {
            display: flex;
            flex-direction: column;
            gap: 16px;
        }
        label {
            font-weight: 500;
            color: #222;
            margin-bottom: 4px;
        }
        input, select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 1rem;
            background: #f7f7f7;
        }
        button {
            background: linear-gradient(90deg, #1e3c72 0%, #2a5298 100%);
            color: #fff;
            padding: 12px 0;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            margin-top: 10px;
            transition: background 0.2s;
            box-shadow: 0 2px 8px rgba(30,60,114,0.08);
        }
        button:hover {
            background: linear-gradient(90deg, #2a5298 0%, #1e3c72 100%);
        }
        .back-link {
            display: block;
            text-align: center;
            margin-top: 18px;
            color: #2a5298;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.2s;
        }
        .back-link:hover {
            color: #1e3c72;
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="menu-container">
        <h1>Cadastro de Jogador</h1>
        <form action="/cadastro-jogador" method="POST">
            <label for="nome">Nome do Jogador:</label>
            <input type="text" id="nome" name="nome" required>

            <label for="numero">Número da Camisa:</label>
            <input type="text" id="numero" name="numero" required>

            <label for="dataNascimento">Data de Nascimento:</label>
            <input type="date" id="dataNascimento" name="dataNascimento" required>

            <label for="altura">Altura (cm):</label>
            <input type="number" id="altura" name="altura" required>

            <label for="genero">Gênero:</label>
            <select id="genero" name="genero" required>
                <option value="">Selecione...</option>
                <option value="Masculino">Masculino</option>
                <option value="Feminino">Feminino</option>
            </select>

            <label for="posicao">Posição:</label>
            <input type="text" id="posicao" name="posicao" required>

            <label for="equipe">Equipe:</label>
            <select id="equipe" name="equipe" required>
                <% equipes.forEach(equipe => { %>
                    <option value="<%= equipe.nomeEquipe %>"><%= equipe.nomeEquipe %></option>
                <% }); %>
            </select>

            <button type="submit">Cadastrar</button>
        </form>
        <a href="/menu" class="back-link">Voltar ao Menu</a>
    </div>
</body>
</html>